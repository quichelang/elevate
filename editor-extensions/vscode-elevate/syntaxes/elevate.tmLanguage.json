{
  "name": "Elevate",
  "scopeName": "source.elevate",
  "fileTypes": [
    "ers"
  ],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#chars"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#declarations"
    },
    {
      "include": "#macros"
    },
    {
      "include": "#calls"
    },
    {
      "include": "#types"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#punctuation"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.elevate",
          "match": "//.*$"
        },
        {
          "name": "comment.block.elevate",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.raw.elevate",
          "begin": "r(#*)\"",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.string.begin.elevate"
            }
          },
          "end": "\"\\1",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.string.end.elevate"
            }
          }
        },
        {
          "name": "string.quoted.double.elevate",
          "begin": "\"",
          "beginCaptures": {
            "0": {
              "name": "punctuation.definition.string.begin.elevate"
            }
          },
          "end": "\"",
          "endCaptures": {
            "0": {
              "name": "punctuation.definition.string.end.elevate"
            }
          },
          "patterns": [
            {
              "name": "constant.character.escape.elevate",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "chars": {
      "patterns": [
        {
          "name": "string.quoted.single.elevate",
          "match": "'(\\\\(n|r|t|0|\\\\|'|x[0-9a-fA-F]{2})|[^'\\\\])'",
          "captures": {
            "1": {
              "name": "constant.character.escape.elevate"
            }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.declaration.elevate",
          "match": "\\b(rust|use|struct|enum|trait|impl|fn|let|const|static|pub)\\b"
        },
        {
          "name": "keyword.control.elevate",
          "match": "\\b(return|if|else|while|for|in|loop|break|continue|match)\\b"
        },
        {
          "name": "keyword.operator.logical.elevate",
          "match": "\\b(and|or|not)\\b"
        },
        {
          "name": "constant.language.boolean.elevate",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "variable.language.self.elevate",
          "match": "\\bSelf\\b"
        },
        {
          "name": "constant.language.wildcard.elevate",
          "match": "\\b_\\b"
        }
      ]
    },
    "declarations": {
      "patterns": [
        {
          "name": "meta.definition.function.elevate",
          "match": "\\b(fn)\\s+([A-Za-z_][A-Za-z0-9_]*)",
          "captures": {
            "1": {
              "name": "keyword.declaration.function.elevate"
            },
            "2": {
              "name": "entity.name.function.definition.elevate"
            }
          }
        },
        {
          "name": "meta.definition.type.elevate",
          "match": "\\b(struct|enum|trait|impl)\\s+([A-Za-z_][A-Za-z0-9_]*)",
          "captures": {
            "1": {
              "name": "keyword.declaration.type.elevate"
            },
            "2": {
              "name": "entity.name.type.elevate"
            }
          }
        },
        {
          "name": "meta.definition.constant.elevate",
          "match": "\\b(const|static)\\s+([A-Z][A-Z0-9_]*)",
          "captures": {
            "1": {
              "name": "keyword.declaration.elevate"
            },
            "2": {
              "name": "entity.name.constant.elevate"
            }
          }
        }
      ]
    },
    "macros": {
      "patterns": [
        {
          "name": "meta.macro.call.elevate",
          "match": "\\b([A-Za-z_][A-Za-z0-9_]*)\\s*(!)(?=\\s*[({])",
          "captures": {
            "1": {
              "name": "entity.name.function.macro.elevate"
            },
            "2": {
              "name": "punctuation.definition.macro.elevate"
            }
          }
        }
      ]
    },
    "calls": {
      "patterns": [
        {
          "name": "entity.name.function.call.elevate",
          "match": "\\b[a-z_][A-Za-z0-9_]*\\b(?=\\s*\\()"
        },
        {
          "name": "variable.other.member.elevate",
          "match": "(?<=\\.)[A-Za-z_][A-Za-z0-9_]*"
        },
        {
          "name": "entity.name.namespace.elevate",
          "match": "\\b[A-Za-z_][A-Za-z0-9_]*\\b(?=::)"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.elevate",
          "match": "\\b[A-Z][A-Za-z0-9_]*\\b"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.other.elevate",
          "match": "\\b[A-Z][A-Z0-9_]*\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.elevate",
          "match": "\\b0x[0-9a-fA-F_]+\\b"
        },
        {
          "name": "constant.numeric.binary.elevate",
          "match": "\\b0b[01_]+\\b"
        },
        {
          "name": "constant.numeric.integer.elevate",
          "match": "\\b\\d[\\d_]*\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.elevate",
          "match": "\\+=|==|!=|<=|>=|=>|->|\\.\\.\\.=|\\.\\.|[-+*/%<>=!?|@]"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.delimiter.elevate",
          "match": "::|[,:;.]"
        },
        {
          "name": "punctuation.section.brackets.begin.elevate",
          "match": "[({\\[]"
        },
        {
          "name": "punctuation.section.brackets.end.elevate",
          "match": "[)}\\]]"
        }
      ]
    }
  }
}
